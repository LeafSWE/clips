<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leaf.clips"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.leaf.clips.presenter.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <service android:name="com.leaf.clips.model.beacon.BeaconManagerAdapter" />

        <activity
            android:name="com.leaf.clips.presenter.MainActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".presenter.NavigationActivity" />
        </activity>
        <activity android:name="com.leaf.clips.presenter.MainDeveloperPresenter" >
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.DeveloperUnlockerActivity"
            android:label="@string/title_activity_developer_unlocker"
            android:parentActivityName="com.leaf.clips.presenter.HomeActivity" >
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.MainDeveloperActivity"
            android:label="@string/title_activity_main_developer"
            android:parentActivityName="com.leaf.clips.presenter.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leaf.clips.presenter.HomeActivity" />
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.LoggingActivity"
            android:label="@string/title_activity_logging"
            android:parentActivityName="com.leaf.clips.presenter.MainDeveloperActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leaf.clips.presenter.MainDeveloperActivity" />
        </activity>
        <activity android:name="com.leaf.clips.presenter.PoiCategoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leaf.clips.presenter.HomeActivity" />
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.NearbyPoiActivity"
            android:label="@string/title_activity_nearby_poi"
            android:parentActivityName="com.leaf.clips.presenter.HomeActivity" >
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.LogInformationActivity"
            android:label="@string/title_activity_log_information"
            android:parentActivityName="com.leaf.clips.presenter.LoggingActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leaf.clips.presenter.LoggingActivity" />
        </activity>
        <activity
            android:name="com.leaf.clips.presenter.NavigationActivity"
            android:label="@string/title_activity_navigation" >

            <!-- to identify this activity as "searchable" -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leaf.clips.presenter.HomeActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="com.leaf.clips.presenter.DetailedInformationActivity" >
        </activity>

        <receiver android:name="org.altbeacon.beacon.startup.StartupBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name="org.altbeacon.beacon.service.BeaconService"
            android:enabled="true"
            android:exported="false"
            android:isolatedProcess="false"
            android:label="beacon" />
        <service
            android:name="org.altbeacon.beacon.BeaconIntentProcessor"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>